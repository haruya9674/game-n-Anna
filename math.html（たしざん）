<h1>„Åü„Åó„Åñ„Çì„ÇØ„Ç§„Ç∫</h1>
<div class="count" id="count"></div>

<div id="question" class="question"></div>
<div class="grid" id="choices"></div>
<div id="result"></div>

<script>
  const quizzes = [
    {a:1,b:2},{a:2,b:3},{a:3,b:4},{a:4,b:5},{a:5,b:6},
    {a:6,b:4},{a:7,b:3},{a:8,b:2},{a:9,b:1},{a:3,b:7},
    {a:4,b:8},{a:5,b:9},{a:6,b:7},{a:8,b:6},{a:9,b:5},
    {a:7,b:8},{a:9,b:9},{a:6,b:8},{a:5,b:7},{a:4,b:6}
  ];

  let current = 0;

  function makeChoices(answer) {
    const set = new Set([answer]);
    while (set.size < 4) {
      set.add(answer + Math.floor(Math.random() * 5) - 2);
    }
    return [...set].sort(() => Math.random() - 0.5);
  }

  function showQuiz() {
    const q = quizzes[current];
    const answer = q.a + q.b;

    document.getElementById("count").textContent =
      `„ÇÇ„Çì„Å†„ÅÑ ${current + 1} / ${quizzes.length}`;

    document.getElementById("question").textContent =
      `${q.a} + ${q.b} = ?`;

    const choicesDiv = document.getElementById("choices");
    choicesDiv.innerHTML = "";

    makeChoices(answer).forEach(num => {
      const btn = document.createElement("button");
      btn.textContent = num;
      btn.onclick = () => check(num, answer);
      choicesDiv.appendChild(btn);
    });

    document.getElementById("result").textContent = "";
  }

  function check(num, answer) {
    const result = document.getElementById("result");

    if (num === answer) {
      result.textContent = "‚≠ï „Åõ„ÅÑ„Åã„ÅÑÔºÅ";
      speak("Correct");

      current++;
      if (current < quizzes.length) {
        setTimeout(showQuiz, 800);
      } else {
        setTimeout(() => {
          document.getElementById("question").textContent = "üéâ 20„ÇÇ„Çì „ÇØ„É™„Ç¢ÔºÅ";
          document.getElementById("choices").innerHTML = "";
          document.getElementById("count").textContent = "";
          result.textContent = "„Åô„Åî„ÅÑÔºÅ„Çà„Åè„Åå„Çì„Å∞„Å£„Åü„Å≠ÔºÅ";
          speak("Great job");
        }, 800);
      }
    } else {
      result.textContent = "‚ùå „Å°„Åå„ÅÜ„Çà";
      speak("Try again");
    }
  }

  function speak(text) {
    const msg = new SpeechSynthesisUtterance(text);
    msg.lang = "en-US";
    speechSynthesis.speak(msg);
  }

  showQuiz();
</script>

