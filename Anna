<body>

  <h1>ほうこうを えらぼう</h1>

  <div id="result">ボタンをおしてね</div>

  <div class="grid">
    <button onclick="speak('右','みぎ')">右</button>
    <button onclick="speak('左','ひだり')">左</button>
    <button onclick="speak('前','まえ')">前</button>
    <button onclick="speak('後ろ','うしろ')">後ろ</button>
    <button onclick="speak('上','うえ')">上</button>
    <button onclick="speak('下','した')">下</button>
  </div>

  <script>
    function speak(word, reading) {
      document.getElementById("result").textContent =
        word + "（" + reading + "）";

      const msg = new SpeechSynthesisUtterance(reading);
      msg.lang = "ja-JP";
      speechSynthesis.speak(msg);
    }
  </script>

